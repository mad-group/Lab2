<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group3.myapplicationlab2.ExpenseInput">

    <EditText
        android:id="@+id/ie_et_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/who"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ie_et_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/what"
        android:inputType="textPersonName"
        android:layout_below="@+id/ie_et_author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ie_et_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/how_much"
        android:inputType="numberDecimal"
        android:layout_below="@+id/ie_et_expense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ie_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/when"
        android:onClick="dataPicker"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/ie_et_amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ie_et_amount"
        android:layout_alignEnd="@+id/ie_et_amount" />


    <ImageButton
        android:id="@+id/ie_ib_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_camera"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/ie_tv_date"
        android:layout_toEndOf="@+id/ie_tv_date" />



    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Save"
        android:onClick="saveExpense"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ie_tv_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />
</RelativeLayout>
