<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_lv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:weightSum="10">

    <TextView
        android:id="@+id/item_member"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingBottom="@dimen/expense_item_text_padding"
        android:paddingTop="@dimen/expense_item_text_padding"
        android:text="Member"
        android:lines="1"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/item_amount"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/expense_item_text_padding"
        android:paddingTop="@dimen/expense_item_text_padding"
        android:text="0"
        android:lines = "1"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        android:theme="@style/WhiteActivated"
        android:textColor="@color/black"
        android:clickable="true"
        android:textAlignment="textEnd"
        android:layout_gravity="end" />

    <TextView
        android:id="@+id/item_currency"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="â‚¬"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_gravity="center_vertical|end" />

</LinearLayout>